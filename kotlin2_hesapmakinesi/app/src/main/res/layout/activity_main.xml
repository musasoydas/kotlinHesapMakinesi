<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/toplama"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:onClick="toplama"
        android:text="+"
        app:layout_constraintStart_toStartOf="@+id/sayi2"
        app:layout_constraintTop_toBottomOf="@+id/sayi2" />

    <Button
        android:id="@+id/bolme"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:onClick="bolme"
        android:text="/"
        app:layout_constraintStart_toStartOf="@+id/sayi2"
        app:layout_constraintTop_toBottomOf="@+id/toplama" />

    <Button
        android:id="@+id/cikarma"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:onClick="cikarma"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@+id/sayi2"
        app:layout_constraintTop_toBottomOf="@+id/sayi2" />

    <EditText
        android:id="@+id/sayi2"
        android:layout_width="277dp"
        android:layout_height="57dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="2. sayiyi Girin:"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sayi1" />

    <EditText
        android:id="@+id/sayi1"
        android:layout_width="277dp"
        android:layout_height="57dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="1. sayiyi Girin:"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/carpma"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:onClick="carpma"
        android:text="*"
        app:layout_constraintEnd_toEndOf="@+id/sayi2"
        app:layout_constraintTop_toBottomOf="@+id/cikarma" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Sonuc: "
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/carpma"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="@+id/bolme"
        app:layout_constraintTop_toBottomOf="@+id/bolme" />

</androidx.constraintlayout.widget.ConstraintLayout>